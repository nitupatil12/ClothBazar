@model   List<Product>
@{
    ViewBag.Title = "ProductTable";
}

<div>
    <form method="post">
        <input id ="seatchTxt"name="Search" />
        <button type="button" id="serachBtn">Serach</button>
    </form>
    <button type="button" id="newBtn">New</button>
</div>

    <table>
        <thead>
            <tr>
                <td>Product Name</td>
                <td>Category</td>
                <td>Price</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>-</td>
                    <td>@product.Price</td>
                    <td>
                        <button class="editBtn" data-id="@product.ID">Edit</button>
                        <button class="delBtn" data-id="@product.ID">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

<script>
    $("#serachBtn").click(function () {
        var serachvalue = $("#seatchTxt").val();

        $.ajax({
            url: '/Product/ProductTable',
            data: {
                serach: serachvalue
            }
        })
            .done(function (respose) {
                $("#tableContiner").html(respose);
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("Fail");
            });
    });

    $(".editBtn").click(function () {
        
        $.ajax({
            url: '/Product/Edit',    
            data: {
                ID:$(this).attr('data-id')
            }
        })
            .done(function (respose) {
                $("#actionContainer").html(respose);
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("Fail");
            });
    });

    $("#newBtn").click(function () {

        $.ajax({
            url: '/Product/Create',
        })
            .done(function (respose) {
                $("#actionContainer").html(respose);
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("Fail");
            });
    });

    $(".delBtn").click(function () {
        var confirmdelete = confirm("Are you sure you want to delete the records")
        if (confirmdelete) {
            $.ajax({
                type: 'POST',
                url: '/Product/Delete',
                data: {
                    ID: $(this).attr('data-id')
                }
            })
                .done(function (respose) {
                    $("#tableContiner").html(respose);
                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("Fail");
                });
        }
       
    });
</script> 